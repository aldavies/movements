<link rel="stylesheet" type="text/css" href="index.scss">

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
<div class="carousel-inner" role="listbox" style="border: 2px solid black">
  <% @posts.each do |post| %>

    <% if post.id == 1 %>
      <div class="carousel-item active">
        <img id="black" class="pics" src="<%= post.img_url %>">

            <div class="carousel-caption">
              <h3 style="color:blue"><%= post.title %></h3>
              <p style="color:black"><%= post.comments %></p>
            </div>
          
      </div>

    <% else %>

      <div class="carousel-item">
        <img id="other" class="pics" src="http://photos.cntraveler.com/2014/09/29/5429c32b425f183f61bf7316_new-york-city-skyline.jpg">
        <div class="carousel-caption">
          <h3 style="color:blue"><%= post.title %></h3>
          <p style="color:black"><%= post.comments %></p>
        </div>
      </div> 

    <% end %>

  <% end %> 

      
</div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

<section style="margin-top: 4px">
    <div class="container">
      <div class="row">
    <div class="col-xs-4">
      <%= image_tag("people.png", :alt => "people") %>
      <h3>Make a Difference</h3>
        <p>Work on solutions with other people that are passionate about the same issues you are. Make a difference by collectively coming together to make change in the world.
        </p>
    </div>

    <div class="col-xs-4">
      <%= image_tag("leaders.png", :alt => "leaders") %>
      <h3>Get connected with leaders able to make change </h3>
        <p>Connect to political, social, or thought leaders that are looking to make change and connect to the people that support them. 
        </p>
    </div>

      <div class="col-xs-4">
      <%= image_tag("community.png", :alt => "community") %>
      <h3>Form a Community!</h3>
        <p>Connect with people that are like minded and share the experience. Bring awareness to your cause, and be the change you want to see in the world.
        </p>

        </div>
      </div>
    </div>
          
<h1 style="text-align:center; color:#3333ff; margin-top:10px">Join a Movement</h1>

  <table style="margin-left:25%; border-collapse:separate; 
border-spacing:10px">
    <thead>
      <tr>
        <th>Movements</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.comments %></td>
          <td><%= link_to 'Show', post %></td>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <button style="margin-left:45%; height:90px; width:150px"><%= link_to 'New Movement', new_post_path %></button>

